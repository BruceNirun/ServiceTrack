@inherits LayoutComponentBase
@using ServiceTrack.Components.Layout

<MudThemeProvider Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<MudLayout>
    @* 1. เรียกใช้คอมโพเนนต์ส่วนหัวที่เราสร้างขึ้น *@
    <MainHeader />

    @* 2. ส่วนของ Body จะแสดงเนื้อหาของแต่ละหน้า *@
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    // 3. Theme ยังคงอยู่ที่นี่
    private MudTheme _theme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#2962FF",
            PrimaryContrastText = Colors.Shades.White, 
            Secondary = "#00C853",
            Background = "#FFFFFF", // เปลี่ยนพื้นหลังหลักเป็นสีขาว
            AppbarBackground = "#FFFFFF",
            AppbarText = Colors.Gray.Darken3,
            Surface = "#FFFFFF",
            Divider = Colors.Gray.Lighten4 // สีเส้นคั่น
        },
        LayoutProperties = new LayoutProperties()
        {
            DefaultBorderRadius = "8px"
        }
    };
}